    "version": "0.2.0",
    "configurations": [
        {
            "name": "gulpfile.ts - debug TypeScript",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": ["--gulpfile", "./gulpfile.ts", "processCsv"],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy", "-r", "ts-node/register"
            ],
            "console": "internalConsole",
        },        
        {
            "type": "node",
            "request": "launch",
            "name": "gulpfile.js - debug javascript",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": ["--gulpfile", "./gulpfile.js", "default"],
            "cwd": "${workspaceRoot}",
        },
    ]
}